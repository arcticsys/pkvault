generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./data/data.db"
}

model Pokemon {
    id            String         @id @unique @default(uuid())
    data          Bytes          
    generation    Int            
    speciesid     Int            
    species       Json           
    nickname      String?        
    gender        Int            
    exp           Int            
    evs           Json           
    ivs           Json           
    type          String         
    ot            String         
    hometracker   String?        
    language      Int            @default(2)
    sourcepath    String?        
    saveid        String?        
    legal         Boolean        @default(true)
    legalreason   String?        
    timestamp     DateTime       @default(now())
    extractedtime DateTime       @default(now())
    save          Save?          @relation(fields: [saveid], references: [id], name: "ogsave")
    group         PokemonGroup[] @relation("pkmgroup")
}

model Save {
    id            String         @id @unique @default(uuid())
    data          Bytes          
    filepath      String         @unique
    timestamp     DateTime       @default(now())
    extractedtime DateTime       @default(now())
    pokemon       Pokemon[]      @relation("ogsave")
}

model PokemonGroup {
    id            String         @id @unique @default(uuid())
    timestamp     DateTime       @default(now())
    pokemon       Pokemon[]      @relation("pkmgroup")
}